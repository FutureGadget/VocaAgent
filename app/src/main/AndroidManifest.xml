<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="hci.com.vocaagent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectBookActivity">

            <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"  />

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <activity android:name=".NoteManagerActivity"
            android:parentActivityName=".SelectBookActivity"/>
        <activity android:name=".BookActivity"
            android:parentActivityName=".NoteManagerActivity"/>
        <activity android:name=".ExamPagerActivity"/>
    </application>

</manifest>
