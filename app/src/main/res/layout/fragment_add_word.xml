<?xml version="1.0" encoding="utf-8"?>
<!-- Add word dialog fragment which will be shown when "단어추가" is clicked. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
    <TextView
        android:id="@+id/add_word_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_word"
        android:textSize="30dp"/>
    <AutoCompleteTextView
        android:id="@+id/edit_text_add_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_word_title_text_view"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_add_word"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/dialog_add_word_button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR"/>
        <Button
            android:id="@+id/dialog_add_word_button_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSERT"/>
    </LinearLayout>
</RelativeLayout>